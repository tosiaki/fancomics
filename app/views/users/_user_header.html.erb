<div class="user-header">
	<%= render 'shared/user_icon', user: @user %>
	<div class="user-info-header">
		<div class="display-user-name">
			<div class="show-user"><span class="user-name"><%= link_to @user.name, @user, id: "user-link" %></span>
				<% if user_signed_in? && current_user != @user %>
					<span class="actions">
						<% if current_user.is_subscribed_to? @user %>
							<%= link_to "Unfollow", unsubscribe_from_user_path(@user), method: :delete %>
						<% else %>
							<%= link_to "Follow", subscribe_to_user_path(@user), method: :post %>
						<% end %>
					</span>
				<% end %>
				<% if @user.subscribers_count > 0 || @user.subscriptions_count > 0 %>
					<% if @user.subscribers_count > 0 %>
						<span class="subscribing">
							<%= link_to "Followers #{@user.subscribers_count}", subscribers_user_path(@user) %>
						</span>
					<% end %>
					<% if @user.subscriptions_count > 0 %>
						<span class="subscribing">
							<%= link_to "Following #{@user.subscriptions_count}", subscriptions_user_path(@user) %>
						</span>
					<% end %>
				<% end %>
			</div> 
		</div>
		<div class="display-bio">
			<%= @user.bio %>
		</div>
	</div>
</div>