<% content_for :title, "Sign up" %>
<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="notice"><%= alert %></p>
<% end %>
<div class="submission-form" id="signup-form">
  <%= form_for(resource, as: resource_name, url: signup_path) do |f| %>

    <h2 class="heading">Sign up</h2>

    <div class="form-input-box">
      <ul class="form-inputs clear">
        <li class="form-element">
          <div class="field">
            <div class="form-label">
              <%= f.label :email %>
            </div>
            <div class="form-input">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-label">
              <%= f.label :name %>
            </div>
            <div class="form-input">
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              <%= render 'shared/character_counter', max_length: User.validators_on(:name)[1].options[:maximum], counter_id: "name_counter", input_field: "input#user_name" %>
            </div>

            <div class="form-label">
              <div class="label-with-notice-container">
                <div class="label-with-notice">
                  <%= f.label :password %>
                  <% if @minimum_password_length %>
                    <div class="form-label-notice"><em>(<%= @minimum_password_length %> characters minimum)</em></div>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="form-input">
              <%= f.password_field :password, autocomplete: "off" %>
            </div>

            <div class="form-label">
              <%= f.label :password_confirmation %>
            </div>
            <div class="form-input">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
        </li>

        <li class="form-element">
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        </li>
      </ul>

    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>