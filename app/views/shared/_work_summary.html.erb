<li class="work-summary">
	<%= link_to (image_tag thumbnail_image(work), class: evaluate_adult(work)), work %>
	<p class="datetime"><%= outer_date_display(work) %></p>
	<ul class="summary-info">
		<li><%= link_to work.title, work, class: "title-link" %>
			(<ul class="outer-fandom-list">
				<% work.fandom_list.each do |fandom| %>
					<%= link_to fandom, works_search_path(tags: fandom), class: "tag" %>
				<% end %>
			</ul>)
			by <%= author_link work %></li>
		<% if work.character_list.any? || work.relationship_list.any? || work.fandom_list.any? %>
			<li>
				<ul class="outer-tag-list">
					<% if work.relationship_list.any? %>
						<% work.relationship_list.each do |relationship| %>
							<%= link_to relationship, works_search_path(tags: relationship), class: "summary-relationship tag" %>
						<% end %>
					<% end %>
					<% if work.character_list.any? %>
						<% work.character_list.each do |character| %>
							<%= link_to character, works_search_path(tags: character), class: "tag" %>
						<% end %>
					<% end %>
					<% if work.tag_list.any? %>
						<% work.tag_list.each do |tag| %>
							<%= link_to tag, works_search_path(tags: tag), class: "tag" %>
						<% end %>
					<% end %>
				</ul>
			</li>
		<% end %>
		<li><%= work.description %></li>
	</ul>
	<div class="landmark"></div>
	<div class="stats-container">
		<ul class="stats">
			<%= render 'shared/basic_stats', work: work %>
		</ul>
	</div>
</li>