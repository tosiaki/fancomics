<% content_for :itemprop do %>
	<link rel="icon" href="<%= @work.image %>">
	<meta itemprop="image" content="<%= @work.image.url(:thumb) %>">
	<meta itemprop="name" content="<%= @work.title %>">
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="<%= @work.title %>">
	<meta name="twitter:image" content="<%= @work.image.url(:thumb) %>">
	<% unless @work.note.empty? %>
		<meta name="twitter:description" content="<%= @work.note %>">
	<% end %>
	<meta property="og:type" content="article">
	<meta property="og:title" content="<%= @work.title %>">
	<meta property="og:image" content="<%= @work.image.url(:thumb) %>">
	<meta property="og:image:width" content="600">
	<meta property="og:image:height" content="315">
	<link rel="image_src" href="<%= @work.image.url(:thumb) %>">
<% end %>